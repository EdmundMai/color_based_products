<div class="color_container">
	<% if pc.object.new_record? %>
		<h3><%= pc.collection_select :color_id, Color.all, :id, :name %></h3>
	<% else %>
		<h3><%= pc.object.color.name %></h3>
	<% end %>
	
	<%= pc.label :image, "Add Images" %>
	<% if pc.object.new_record? %>
		<%= pc.file_field :image, multiple: true, name: "#{pc.object_name.sub('product[products_colors_attributes]', 'new_product_images')}[]" %>
	<% else %>
		<%= pc.file_field :image, multiple: true, name: "product_images[#{pc.object.color_id}][]" %>
	<% end %>

	<ul class="sorted_product_image_list">
	<% pc.object.product_images.each do |product_image| %>
		<li id="<%= product_image.id %>">
			<%= image_tag(product_image.image.url(:thumb)) %>
			<%= link_to image_tag("delete.png", width: 20), admin_product_image_path(product_image), method: :delete, remote: true %>
		</li>
	<% end %>
	</ul>
	<%= pc.check_box :mens %> Men's <%= pc.check_box :womens %> Women's<br>
	
	<% pc.object.variants.build if pc.object.new_record? %>
	<%= pc.fields_for :variants do |v| %>
		<div class="variant_container">
		<% if v.object.new_record? %>
			<%= v.collection_select :size_id, Size.all, :id, :name %>
		<% else %>
			<%= v.object.size.name %><br>
		<% end %>
		<%= v.label :price %>
		<%= v.text_field :price %><br>
		<%= v.label :measurements %>
		<%= v.text_field :measurements %><br>
		<%= v.label :sku %>
		<%= v.text_field :sku %><br>
		</div>
	<% end %>
</div>